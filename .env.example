# ========================================
# Configuration ChambrePro - Exemple
# ========================================
# Copier ce fichier en .env et remplir avec vos valeurs

# ========================================
# Spring Configuration
# ========================================
SPRING_PROFILES_ACTIVE=dev

# ========================================
# Server Configuration
# ========================================
SERVER_PORT=8080

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chambrepro_db
DB_USERNAME=chambrepro_user
DB_PASSWORD=your_secure_password_here

# ========================================
# JWT Configuration
# ========================================
# Générer une clé secrète forte (minimum 256 bits)
# Exemple: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_here_minimum_256_bits
JWT_EXPIRATION=86400000

# ========================================
# MinIO Configuration (Stockage de fichiers)
# ========================================
MINIO_URL=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin2025
MINIO_BUCKET_NAME=chambrepro-photos


# ========================================
# CORS Configuration (Production)
# ========================================
CORS_ALLOWED_ORIGINS=https://chambrepro.com,https://www.chambrepro.com

# ========================================
# SSL Configuration (Production - Optionnel)
# ========================================
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/etc/ssl/keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password
